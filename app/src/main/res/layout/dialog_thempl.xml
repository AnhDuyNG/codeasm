<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:padding="20dp"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/txt_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="10dp"
        android:text="Add Types"
        android:textColor="#979797"
        android:textSize="28sp" />
    <EditText

        android:hint="Name"
        android:textColor="#00BCD4"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:drawableStart="@drawable/ic_baseline_addbox1"
        android:layout_marginTop="8dp"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_below="@id/txt_title"
        android:id="@+id/text_type"
        android:background="@drawable/custom_input"
        />
    <Spinner
        android:background="@drawable/custom_spinner"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:textColor="#00BCD4"
        android:layout_marginTop="8dp"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:id="@+id/spinner_status"
        android:layout_below="@id/text_type"
        />

    <Button
        android:id="@+id/btn_addPhanLoai"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/spinner_status"
        android:layout_marginTop="8dp"
        android:backgroundTint="#F397B6"
        android:text="Add"
        android:textColor="#ffffff" />
    <Button
        android:layout_marginTop="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Cancel"
        android:backgroundTint="#F397B6"
        android:id="@+id/btn_canclePhanLoai"
        android:layout_below="@id/btn_addPhanLoai"
        android:textColor="#ffffff"
        />
</RelativeLayout>