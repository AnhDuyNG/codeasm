<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:padding="20dp"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/txt_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="10dp"
        android:text="Add Payment"
        android:textColor="#717171"
        android:textSize="28sp" />

    <EditText

        android:id="@+id/text_type_GD"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_below="@id/txt_title"
        android:layout_marginTop="8dp"
        android:background="@drawable/custom_input"
        android:drawableStart="@drawable/ic_baseline_addbox1"
        android:hint="Name"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:textColor="#00BCD4" />
    <EditText

        android:hint="Date"
        android:textColor="#00BCD4"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:drawableStart="@drawable/ic_baseline_addbox1"
        android:layout_marginTop="8dp"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_below="@id/text_type_GD"
        android:id="@+id/textedit_date_GD"
        android:background="@drawable/custom_input"
        />
    <EditText

        android:hint="Money"
        android:textColor="#00BCD4"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:drawableStart="@drawable/ic_baseline_addbox1"
        android:layout_marginTop="8dp"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_below="@id/textedit_date_GD"
        android:id="@+id/textedit_money_GD"
        android:background="@drawable/custom_input"
        />
    <EditText

        android:hint="Status"
        android:textColor="#00BCD4"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:drawableStart="@drawable/ic_baseline_addbox1"
        android:layout_marginTop="8dp"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_below="@id/textedit_maloai_GD"
        android:id="@+id/textedit_status_GD"
        android:background="@drawable/custom_input"
        />
    <EditText

        android:hint="ID"
        android:textColor="#00BCD4"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:drawableStart="@drawable/ic_baseline_addbox1"
        android:layout_marginTop="8dp"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_below="@id/textedit_money_GD"
        android:id="@+id/textedit_maloai_GD"
        android:background="@drawable/custom_input"
        />

    <Button
        android:id="@+id/btn_addGD"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/textedit_status_GD"
        android:layout_marginTop="8dp"
        android:backgroundTint="#F397B6"
        android:text="Add"
        android:textColor="#ffffff" />

    <Button
        android:id="@+id/btn_cancleGD"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/btn_addGD"
        android:layout_marginTop="8dp"
        android:backgroundTint="#F397B6"
        android:text="Cancel"
        android:textColor="#ffffff" />
</RelativeLayout>